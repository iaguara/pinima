#!/usr/bin/env sh

rootPath=$(cd -P -- "$(dirname -- "${0}")" && printf '%s\n' "$(pwd -P)")

source ${rootPath}/../pinima.sh

pinima() {
  local appDir="${PINIMA_HOME}/${1}"

  if [ -d "${appDir}" ]
  then
    # remove first argument
    [ $# -ne 0 ] && shift
  else
    echo "Pinima: ${appDir}: file not found!"
    exit 1
  fi

  env make -C ${appDir} "${@}"
}
pinima "${@}"
